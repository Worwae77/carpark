<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="th.co.dtac.carparking.SummaryActivity">

    <TextView
        android:id="@+id/tv_floor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingTop="80dp"
        android:text="Fl. 2"
        android:textSize="40sp"
        android:textColor="@android:color/holo_blue_dark"/>

    <TextView
        android:id="@+id/tv_floor_position"
        android:layout_below="@id/tv_floor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingTop="10dp"
        android:text="Position   B2"
        android:textSize="30sp"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/tv_time"
        android:layout_below="@id/tv_floor_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingTop="10dp"
        android:text="Before   13.00"
        android:textSize="30sp"
        android:textColor="@android:color/black"/>

    <Button
        android:id="@+id/bt_confirm"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="Confirm"/>




</RelativeLayout>
